@using BookingSystem.Authorization
@using BookingSystem.Web.Models.Flights
@using BookingSystem.Web.Startup
@using BookingSystem.Web.Models.Common.Modals
@model FlightJetLookupTableViewModel

@section Scripts
    {
    <script src="/view-resources/Views/Flights/_FlightJetLookupTableModal.js" asp-append-version="true"></script>
}

@await Html.PartialAsync("~/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("PickJet")))

<div class="modal-body">
    <div class="kt-form">
        <div class="row">
            <div class="col-xl-12">
                <div class="kt-group align-items-center">
                    <div class="input-group">
                        <input type="text" id="JetTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                        <span class="input-group-append">
                            <button id="GetJetButton" class="btn bg-blue btn-search" type="submit"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12">
            <table id="JetTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@L("Actions")</th>
                        <th>@L("JetType")</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@await Html.PartialAsync("~/Views/Common/Modals/_ModalFooterWithClose.cshtml")
@using BookingSystem.Authorization
@using BookingSystem.Web.Models.Flights
@using BookingSystem.Web.Startup
@model FlightsViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Tenant.Flights;
}
@section Scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Flights/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Flights/Index.min.js" asp-append-version="true"></script>
    </environment>
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Flights")</h1>
            </div>
            <div class="col-sm-6">
                @if (IsGranted(AppPermissions.Pages_Flights_Create))
                {
                    <button id="CreateNewFlightButton" class="btn btn-primary blue float-sm-right"><i class="fa fa-plus"></i> @L("CreateNewFlight")</button>
                }
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="input-group">
                                    <input type="text" id="FlightsTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                    <div class="input-group-append">
                                        <button id="GetFlightsButton" class="btn bg-blue btn-search" type="submit"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="DepartureDateFilterId">@L("DepartureDate")</label>
                                    <input class="form-control m-input date-picker" type="text" placeholder="@L("DepartureDate")" id="DepartureDateFilterId">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="ArrivalDateFilterId">@L("ArrivalDate")</label>
                                    <div class="input-group">
                                        <input class="form-control m-input date-picker" type="text" placeholder="@L("ArrivalDate")" id="ArrivalDateFilterId">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label for="StatusFilterId">@L("Status")</label>
                                <select class="form-control" name="StatusFilter" id="StatusFilterId">
                                    <option value="-1">@L("All")</option>
                                    <option value="1">@L("Enum_FlightStatus_1")</option>

                                    <option value="1">@L("Enum_FlightStatus_1")</option>

                                    <option value="2">@L("Enum_FlightStatus_2")</option>

                                    <option value="3">@L("Enum_FlightStatus_3")</option>


                                </select>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="CityNameFilterId">(@L("LocationOfDeparture"))</label>
                                    <input type="text" class="form-control" name="cityNameFilter" id="CityNameFilterId">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="CityName2FilterId">(@L("LocationOfArrival"))</label>
                                    <input type="text" class="form-control" name="cityName2Filter" id="CityName2FilterId">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="jetJetTypeFilterId">(@L("Jet"))</label>
                                    <input type="text" class="form-control" name="jetJetTypeFilter" id="jetJetTypeFilterId">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="FlightsTable" class="table table-striped table-bordered nowrap" width="100%">
                                <thead>
                                    <tr>
                                        <th>@L("Actions")</th>
                                        <th>@L("Status")</th>
                                        <th>@L("FlightNumber")</th>
                                        <th>@L("LocationOfDeparture")</th>
                                        <th>@L("LocationOfArrival")</th>
                                        <th>@L("DepartureDate")</th>
                                        <th>@L("ArrivalDate")</th>
                                        <th>@L("EconomySeats")</th>
                                        <th>@L("BusinessSeats")</th>
                                        <th>@L("EconomyPrice")</th>
                                        <th>@L("BusinessPrice")</th>
                                        <th>@L("Jet")</th>
                                        <th>@L("BusinessAvailableTickets")</th>
                                        <th>@L("EconomyAvailableTickets")</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@using BookingSystem.Authorization
@using BookingSystem.Web.Models.Flights
@using BookingSystem.Web.Startup
@using BookingSystem.Web.Models.Common.Modals
@model FlightCityLookupTableViewModel

@section Scripts
    {
    <script src="/view-resources/Views/Flights/_FlightCityLookupTableModal.js" asp-append-version="true"></script>
}

@await Html.PartialAsync("~/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("PickCity")))


<div class="modal-body">
    <div class="kt-form">
        <div class="row align-items-center mb-4">
            <div class="col-xl-12">
                <div class="kt-group align-items-center">
                    <div class="input-group">
                        <input type="text" id="CityTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                        <span class="input-group-append">
                            <button id="GetCityButton" class="btn bg-blue btn-search" type="submit"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row align-items-center">
        <div class="col-xl-12">
            <table id="CityTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@L("Actions")</th>
                        <th>@L("Code")</th>
                        <th>@L("Name")</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>



@await Html.PartialAsync("~/Views/Common/Modals/_ModalFooterWithClose.cshtml")